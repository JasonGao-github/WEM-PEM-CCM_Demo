	<!-- 查询单条记录 -->

		

	
	
 	<select id="selectAllQuantityInputItermType" 
		resultType="com.wemccm.common.entity.QuantityInputItermType">
		SELECT * FROM quantityinputitermtype
	</select>
	
	
	
	
	<select id="findQuantityInputItermType" 
	
 	parameterType="com.wemccm.common.pojo.QuantityInputItermTypePojo"
		resultType="com.wemccm.common.entity.QuantityInputItermType">

		SELECT * FROM quantityinputitermtype 
	<where>
			<if test="name!=null and name!=''">
				name = #{name}
			</if>
			<if test="code!=null and code!=''">
				and code = #{code}
			</if>
			<if test="id!=null and id!=''">
				and id = #{id}
			</if>

		</where>
	</select>
	
	 <select id="findTableI" 
 	parameterType="com.wemccm.common.pojo.QuantityInputItermPojo"
		resultType="com.wemccm.common.pojo.QuantityInputBasicDataListPojo">
		
		SELECT i.*
		
		FROM quantityinputiterm as i
		
		WHERE i.quantityInputItermTypeId=#{quantityInputItermTypeId}
		
	</select>
	

	
	<select id="insertQuantityInput" 
 	parameterType="com.wemccm.common.pojo.QuantityInputPojo">
		
		INSERT INTO quantityinput (projectId, quantityInputItemId,quantityInputTypeId,quatity,cost) 
		VALUES (#{projectId},#{quantityInputItemId},#{quantityInputTypeId},#{quatity},#{cost})
		
	</select>
	
	
	
		 <select id="findTableSTPAndST" 
 	parameterType="Integer"
		resultType="com.wemccm.common.pojo.QuantityInputItermDetailPojo">
		
		SELECT stp.quantityInputItemId,stp.quantityInputSubTypeId,stp.price,
		
		st.quantityInputTypeId,st.name
		
		FROM quantityinputitermsubtypeprice as stp
		
		LEFT JOIN quantityinputsubtype as st
		ON stp.quantityInputSubTypeId=st.id
		
		WHERE stp.quantityInputItemId=#{id}
		
	</select>
	
	
	
	




</mapper>